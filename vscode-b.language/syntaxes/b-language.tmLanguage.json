{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "B Language",
  "scopeName": "source.b",
  "fileTypes": [
    "b",
    "blang"
  ],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#literals"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#identifiers"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.c-style.b",
          "match": "//.*"
        },
        {
          "name": "comment.block.c-style.b",
          "match": "/\\*.*?\\*/",
          "captures": {
            "0": {
              "name": "comment.block.b"
            }
          }
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.b",
          "match": "\\b(if|else|while|switch|case|break|goto|return)\\b"
        },
        {
          "name": "storage.type.b",
          "match": "\\b(auto|extrn)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.b",
          "match": "(?:\\+\\+|--|==|!=|<=|>=|<<|>>|&&|\\|\\||\\*|/|%|\\+|-|&|\\||\\^|!|~|\\?|:|=|;|<|>)"
        }
      ]
    },
    "literals": {
      "patterns": [
        {
          "name": "string.quoted.double.b",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.b",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.b",
          "match": "'[\\x00-\\x7F\\s]?'"
        },
        {
          "name": "constant.numeric.integer.b",
          "match": "\\b\\d+\\b"
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "entity.name.function.b",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_.]{0,7}\\b(?=\\s*\\()"
        },
        {
          "name": "entity.name.label.b",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9._]{0,7}\\s*:",
          "captures": {
            "0": {
              "name": "entity.name.label.b"
            }
          }
        },
        {
          "name": "variable.other.b",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_.]{0,7}\\b"
        }
      ]
    }
  }
}